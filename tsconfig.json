{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "outDir": "./dist/",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./src"]
}
